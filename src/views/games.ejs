<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Game Launcher | Ace11</title>

  <!-- Viewport for Mobile Responsiveness -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Remix Icon -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #000;
      overflow: hidden;
      font-family: Arial, sans-serif;
    }

    /* HEADER (overlay on top of iframe) */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 70px;
      background: rgba(20, 10, 40, 0.8);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 12px;
      z-index: 1000;
      backdrop-filter: blur(8px);
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .header-left img {
      height: 45px;
    }

    .header-right {
      display: flex;
      align-items: center;
      gap: 8px;
      color: #c5a3ff;
      cursor: pointer;
      font-size: 16px;
    }

    .header-right img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
    }

    button.back-btn {
      background: none;
      border: none;
      color: #fff;
      font-size: 26px;
      cursor: pointer;
      display: flex;
      align-items: center;
    }

    button.back-btn:hover {
      opacity: 0.8;
    }

    /* LOADER */
    .loader {
      width: 80px;
      height: 80px;
      border: 10px solid transparent;
      border-top: 10px solid #FFD700;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 900;
    }

    @keyframes spin {
      0% { transform: translate(-50%, -50%) rotate(0deg); }
      100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* FULLSCREEN GAME */
    .iframe-container {
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      height: 93%;
    }
@media (max-width: 1024px) {
  .iframe-container {
    top: 60px; /* Adjust for mobile and tablet layout */
  }
}

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: none;
    }

    /* MOBILE RESPONSIVE */
    @media (max-width: 600px) {
      .header {
        height: 60px;
        padding: 0 10px;
      }

      .header-left img {
        height: 35px;
      }

      button.back-btn {
        font-size: 22px;
      }

      .header-right span {
        font-size: 14px;
      }

      .header-right img {
        width: 28px;
        height: 28px;
      }
    }
  </style>
</head>
<body>
  <!-- HEADER -->
  <div class="header">
    <div class="header-left">
      <button class="back-btn" onclick="window.location.href='/'" aria-label="Back to Home">
        <i class="ri-arrow-left-s-line"></i>
      </button>
      <img src="/img/Home/daman-red.png" alt="Logo">
    </div>

    <div class="header-right" onclick="window.location.href='/wallet/recharge'">
      <span>Add Cash</span>
      <img src="/xzcaszcasZ.png" alt="Wallet">
    </div>
  </div>

  <!-- LOADER -->
  <div class="loader" id="loader"></div>

  <!-- GAME FULLSCREEN -->
  <div class="iframe-container">
    <iframe id="gameFrame" allowfullscreen></iframe>
  </div>

  <script>
    const providerCode = "<%= providerCode %>";
    const gameCode = "<%= gameCode %>";
    const currency = "<%= currency %>";

    async function loadGame() {
      const loader = document.getElementById("loader");
      const iframe = document.getElementById("gameFrame");

      try {
        const response = await fetch(`/game/launchers?providerCode=${providerCode}&gameCode=${gameCode}&currency=${currency}`);
        const data = await response.json();

        if (data.success && data.launchURL) {
          iframe.src = data.launchURL;
          iframe.style.display = "block";
        } else {
          await Swal.fire({
            icon: 'error',
            title: 'Game Unavailable',
            text: data.error || 'Game is currently not available.',
            confirmButtonText: 'OK'
          });
          window.location.href = '/';
        }
      } catch (err) {
        await Swal.fire({
          icon: 'error',
          title: 'Oops!',
          text: 'Game is currently not available.',
          confirmButtonText: 'OK'
        });
        window.location.href = '/';
      } finally {
        loader.style.display = "none";
      }
    }

    window.onload = loadGame;
  </script>
</body>
</html>
