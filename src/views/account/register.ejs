<body class="flex items-center justify-center h-screen">

    <div class="auth-bg w-full h-full max-w-md">
        <!-- Header -->
        <div class="flex items-center h-14 mb-6 px-2" style="background: linear-gradient(180deg, #3e1474, #101114 96.35%);">
            <button onclick="history.back()" aria-label="Back" class="text-white pr-4 text-lg">
                <i class="ri-arrow-left-s-line w-6 h-auto"></i>
            </button>
            <h2 class="flex-1 text-center text-white font-semibold text-lg">Register</h2>
            <span class="w-6"></span>
        </div>

        <!-- Form -->
        <div class="px-6 pb-6">
            <form id="registerForm" class="border-b border-white border-opacity-20 pb-4">
                <!-- Mobile -->
                <div class="mb-4">
                    <input id="username" type="tel" maxlength="10" pattern="[0-9]{10}" placeholder="Enter your 10-digit mobile number" class="w-full px-4 py-3 text-lg bg-[#23222b] text-white rounded focus:outline-none focus:ring-2 focus:ring-purple-600" />
                    <p id="usernameError" class="text-red-500 text-sm mt-1 hidden"></p>
                </div>

                <!-- Password -->
                <div class="mb-4 relative">
                    <input id="password" type="password" placeholder="Enter Password" class="w-full px-4 py-3 text-lg bg-[#23222b] text-white rounded focus:outline-none focus:ring-2 focus:ring-purple-600" />
                    <span id="togglePassword" class="absolute right-4 top-3 text-white cursor-pointer">
                        <i class="ri-eye-line"></i>
                    </span>
                    <p id="passwordError" class="text-red-500 text-sm mt-1 hidden"></p>
                </div>

                <!-- Confirm Password -->
                <div class="mb-4 relative">
                    <input id="confirmPassword" type="password" placeholder="Confirm Password" class="w-full px-4 py-3 text-lg bg-[#23222b] text-white rounded focus:outline-none focus:ring-2 focus:ring-purple-600" />
                    <span id="toggleConfirmPassword" class="absolute right-4 top-3 text-white cursor-pointer">
                        <i class="ri-eye-line"></i>
                    </span>
                    <p id="confirmPasswordError" class="text-red-500 text-sm mt-1 hidden"></p>
                </div>

                <!-- Invite Code -->
                <div class="mb-4">
                    <input id="inviteCode" type="text" placeholder="Enter Invite Code (optional)" class="w-full px-4 py-3 text-lg bg-[#23222b] text-white rounded focus:outline-none focus:ring-2 focus:ring-purple-600" />
                    <p id="inviteCodeError" class="text-red-500 text-sm mt-1 hidden"></p>
                </div>

                <!-- Agreement -->
                <div class="flex items-center mb-1">
                    <input id="agreement" type="checkbox" checked class="accent-purple-500 mr-2 w-5 h-5" />
                    <label for="agreement" class="text-white text-sm">
                        I agree to the <span class="underline text-purple-300">Privacy Policy</span>
                    </label>
                </div>
                <p id="agreementError" class="text-red-500 text-sm mt-1 hidden"></p>

                <!-- Forgot password -->
                <div class="text-right mt-2 mb-2">
                    <a href="/forgot_reset" class="text-white hover:text-purple-300 text-sm underline">Forgot
                        Password?</a>
                </div>

                <p id="SubmitError" class="text-green-500 text-sm mt-1 hidden"></p>

                <!-- Submit -->
                <button type="submit" class="w-full py-3 text-lg bg-[#a020f0] hover:bg-purple-700 text-white font-bold rounded transition">
                    Register
                </button>
            </form>

            <div class="text-center mt-4">
                <p class="text-sm text-white">
                    Already a member?
                    <a href="/login" class="text-purple-400 hover:text-purple-300 underline font-medium">Login</a>
