<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposit | colorrx</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Custom style for the HOT ribbon */
        .hot-ribbon {
            position: absolute;
            top: 0;
            left: 0;
            background-color: #f87171;
            color: white;
            padding: 2px 15px;
            font-size: 0.75rem;
            font-weight: bold;
            transform: rotate(-45deg) translate(-20px, -10px);
            transform-origin: top left;
            z-index: 10;
        }

        /* Styling for dropdown arrows to match the dark theme better */
        select {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='white'%3e%3cpath fill-rule='evenodd' d='M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z' clip-rule='evenodd' /%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.5rem center;
            background-size: 1.5em 1.5em;
            padding-right: 2.5rem;
        }
    </style>
</head>

<body class="bg-white min-h-screen w-full md:max-w-[500px] mx-auto">
    <!-- Header -->
    <div class="flex items-center h-14 px-2" style="background: white;">
        <button onclick="history.back()" aria-label="Back" class="text-black pr-4 text-lg">
            <i class="ri-arrow-left-s-line w-6 h-auto"></i>
        </button>
        <h2 class="flex-1 text-center text-black font-semibold text-lg">Deposit</h2>
        <span class="w-6"></span>
    </div>

    <!-- Deposit Type Tabs -->
    <div class="bg-white text-gray-200 p-4">
        <div class="flex rounded-lg overflow-hidden mb-6 bg-[#141625]">
           
            <div class="flex-1">
                <button id="flatTab" onclick="showTab('flat')" class="w-full bg-[#1e2030] text-gray-400 py-3 font-semibold text-sm">
                    INR
                </button>
            </div>
             <div class="relative flex-1">
                <button id="cryptoTab" onclick="showTab('crypto')" class="w-full bg-[#FA605F] text-white py-3 font-semibold text-sm">
                    Usdt
                </button>
         
            </div>
        </div>

        <!-- Crypto Deposit Section -->
        <div id="cryptoSection" style="margin-bottom: 80px;">
            <div class="w-full max-w-md bg-[#141625] rounded-2xl shadow-lg p-6">
                <div class="mb-4">
                    <label for="depositCurrency" class="block text-gray-400 mb-2 text-sm">Deposit Currency</label>
                    <div class="relative flex items-center bg-[#1e2030] rounded-lg">
                        <img src="https://img.icons8.com/color/48/000000/tether.png" class="w-6 h-6 ml-3" alt="USDT Icon" />
                        <select id="depositCurrency" class="w-full bg-transparent text-gray-200 px-3 py-2.5 focus:outline-none border-none">
                            <option value="USDT">USDT</option>
                        </select>
                    </div>
                </div>

                <div class="mb-6">
                    <label for="chooseNetwork" class="block text-gray-400 mb-2 text-sm">Choose Network</label>
                    <div class="relative bg-[#1e2030] rounded-lg">
                        <select id="chooseNetwork" class="w-full bg-transparent text-gray-200 px-4 py-2.5 focus:outline-none border-none">
                            <option value="<%= NETWORK_TYPE %>"><%= NETWORK_TYPE %></option>
                      
                        </select>
                    </div>
                </div>

                <div class="grid grid-cols-3 gap-3 mb-6">
                    <button onclick="setCryptoAmount(10)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">10</button>
                    <button onclick="setCryptoAmount(30)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">30</button>
                    <button onclick="setCryptoAmount(50)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">50</button>
                    <button onclick="setCryptoAmount(100)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">100</button>
                    <button onclick="setCryptoAmount(300)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">300</button>
                    <button onclick="setCryptoAmount(500)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">500</button>
                    <button onclick="setCryptoAmount(1000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">1,000</button>
                    <button onclick="setCryptoAmount(3000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">3,000</button>
                    <button onclick="setCryptoAmount(5000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg text-white font-medium">5,000</button>
                </div>

                <label class="block text-gray-400 mb-2 text-sm">Amount (10 - 50,000 RS Equivalent)</label>
                <div class="bg-[#1e2030] rounded-lg px-3 mb-2 flex items-center justify-between">
                    <input id="cryptoAmountInput" type="number" placeholder="Enter USDT amount" class="w-full bg-transparent text-gray-200 px-0 py-3 focus:outline-none" />
                    <span class="text-gray-400 text-sm">USDT</span>
                </div>
                <p id="approxINR" class="text-gray-400 mb-6 text-sm">≈ ₹ 0</p>

                <button onclick="submitCryptoDeposit()" class="w-full bg-[#FA605F] hover:bg-purple-700 text-white py-3 rounded-lg font-semibold">
                    Submit
                </button>
            </div>
        </div>

        <!-- Flat Deposit Section -->
        <div id="flatSection" class="hidden">
            <div class="w-full max-w-md bg-[#141625] rounded-2xl shadow-lg p-6">
                <h2 class="text-gray-400 mb-4 text-sm">Flat Deposit</h2>

                <!-- Step 1: Choose Payment Method -->
                <div id="flatChannelStep">
                    <h2 class="text-gray-400 mb-4 text-sm">Choose a payment method</h2>

                    <div onclick="selectFlatChannel('channel1')" class="flex items-center justify-between bg-[#1e2030] hover:bg-[#2a2d44] cursor-pointer p-4 rounded-lg mb-3">
                        <div class="flex items-center gap-3">
                            <img src="https://img.icons8.com/color/48/000000/bank-card-back-side.png" class="w-10 h-10" />
                            <div>
                                <p class="font-semibold">channel1</p>
                                <p class="text-xs text-gray-400">ETA: 3 min</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p>₹ 100 ~ 50,000 RS</p>
                        </div>
                    </div>

                    <div onclick="selectFlatChannel('channel2')" class="flex items-center justify-between bg-[#1e2030] hover:bg-[#2a2d44] cursor-pointer p-4 rounded-lg mb-3">
                        <div class="flex items-center gap-3">
                            <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" class="w-10 h-10" />
                            <div>
                                <p class="font-semibold">channel2</p>
                                <p class="text-xs text-gray-400">ETA: 5 min</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p>₹ 100 ~ 50,000 RS</p>
                        </div>
                    </div>

                    <div onclick="selectFlatChannel('channel3')" class="flex items-center justify-between bg-[#1e2030] hover:bg-[#2a2d44] cursor-pointer p-4 rounded-lg">
                        <div class="flex items-center gap-3">
                            <img src="https://img.icons8.com/color/48/000000/bank-card-front-side.png" class="w-10 h-10" />
                            <div>
                                <p class="font-semibold">channel3</p>
                                <p class="text-xs text-gray-400">ETA: 7 min</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p>₹ 100 ~ 50,000 RS</p>
                        </div>
                    </div>
                </div>

                <!-- Step 2: Enter Amount -->
                <div id="flatAmountStep" class="hidden">
                    <div class="flex items-center mb-4">
                        <button onclick="goBackFlat()" class="text-white text-lg mr-2">
                            <i class="ri-arrow-left-s-line w-6 h-auto"></i>
                        </button>
                        <h2 class="text-gray-400 text-sm">Payment Method: <span id="selectedFlatChannel"
                                class="font-semibold"></span></h2>
                    </div>

                    <div id="flatMessageBox" class="hidden mb-4 p-3 rounded-lg text-sm font-medium"></div>

                    <div class="grid grid-cols-3 gap-3 mb-6">
                        <button onclick="setFlatAmount(200)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">200</button>
                        <button onclick="setFlatAmount(500)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">500</button>
                        <button onclick="setFlatAmount(1000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">1,000</button>
                        <button onclick="setFlatAmount(2000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">2,000</button>
                        <button onclick="setFlatAmount(5000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">5,000</button>
                        <button onclick="setFlatAmount(10000)" class="bg-[#1e2030] hover:bg-[#FA605F] py-3 rounded-lg">10,000</button>
                    </div>

                    <label class="block text-gray-400 mb-2 text-sm">Amount (10 - 50,000 RS)</label>
                    <div class="flex items-center bg-[#1e2030] rounded-lg px-3 mb-6">
                        <span class="text-gray-400">₹</span>
                        <input id="flatAmountInput" type="number" placeholder="Enter amount"
                            class="w-full bg-transparent text-gray-200 px-3 py-2 focus:outline-none" />
                    </div>

                    <button onclick="submitFlatAmount()"
                        class="w-full bg-[#FA605F] hover:bg-purple-700 text-white py-3 rounded-lg font-semibold">
                        Submit
                    </button>
                </div>
            </div>
        </div>


    </div>
        <%- include('../layout/walltefooter.ejs') %>
    <script>
        // Toggle between Crypto and Flat tabs
        showTab('cccrypto');
        function showTab(tab) {
            if (tab === 'crypto') {
                document.getElementById('cryptoSection').classList.remove('hidden');
                document.getElementById('flatSection').classList.add('hidden');
                document.getElementById('cryptoTab').classList.add('bg-[#FA605F]', 'text-white');
                document.getElementById('cryptoTab').classList.remove('bg-[#1e2030]', 'text-gray-400');
                document.getElementById('flatTab').classList.add('bg-[#1e2030]', 'text-gray-400');
                document.getElementById('flatTab').classList.remove('bg-[#FA605F]', 'text-white');
            } else {
                document.getElementById('flatSection').classList.remove('hidden');
                document.getElementById('cryptoSection').classList.add('hidden');
                document.getElementById('flatTab').classList.add('bg-[#FA605F]', 'text-white');
                document.getElementById('flatTab').classList.remove('bg-[#1e2030]', 'text-gray-400');
                document.getElementById('cryptoTab').classList.add('bg-[#1e2030]', 'text-gray-400');
                document.getElementById('cryptoTab').classList.remove('bg-[#FA605F]', 'text-white');
            }
        }

        /*** Crypto Deposit JS ***/
         const EXCHANGE_RATE_USDT_TO_INR = <%= USDT_CONVERSION_RATE %>;
        const MIN_USDT_AMOUNT = 100;
        const MAX_USDT_AMOUNT = 600;

        const cryptoAmountInput = document.getElementById("cryptoAmountInput");
        const approxINRText = document.getElementById("approxINR");

        function updateApproxINR() {
            const usdtAmount = parseFloat(cryptoAmountInput.value);
            if (usdtAmount > 0) {
                const inrValue = usdtAmount * EXCHANGE_RATE_USDT_TO_INR;
                approxINRText.textContent = `≈ ₹ ${inrValue.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
            } else {
                approxINRText.textContent = `≈ ₹ 0`;
            }
        }

        function setCryptoAmount(value) {
            cryptoAmountInput.value = value;
            updateApproxINR();
        }

        cryptoAmountInput.addEventListener('input', updateApproxINR);

        function submitCryptoDeposit() {
            const usdtAmount = parseFloat(cryptoAmountInput.value);
            if (isNaN(usdtAmount) || usdtAmount < 10) {
                alert(`Please enter a valid USDT amount between ${MIN_USDT_AMOUNT} and ${MAX_USDT_AMOUNT}.`);
                return;
            }
            const selectedNetwork = document.getElementById("chooseNetwork").value;
  
             window.location.href = `/usdt/wepay?amount=${usdtAmount}`;
        }

        updateApproxINR();

        /*** Flat Deposit JS ***/
        const MIN_FLAT_AMOUNT = 50;
        const MAX_FLAT_AMOUNT = 50000;
        let selectedFlatChannel = "";

        function selectFlatChannel(channel) {
            selectedFlatChannel = channel;
            document.getElementById("flatChannelStep").classList.add("hidden");
            document.getElementById("flatAmountStep").classList.remove("hidden");
            document.getElementById("selectedFlatChannel").textContent = channel;
            hideFlatMessage();
        }

        function goBackFlat() {
            document.getElementById("flatAmountStep").classList.add("hidden");
            document.getElementById("flatChannelStep").classList.remove("hidden");
            hideFlatMessage();
        }

        function setFlatAmount(value) {
            document.getElementById("flatAmountInput").value = value;
        }

        function showFlatMessage(msg, type = "error") {
            const box = document.getElementById("flatMessageBox");
            box.textContent = msg;
            box.classList.remove("hidden", "bg-green-500", "bg-red-500", "text-green-100", "text-red-100");
            if (type === "error") {
                box.classList.add("bg-red-500", "text-red-100");
            } else {
                box.classList.add("bg-green-500", "text-green-100");
            }
        }

        function hideFlatMessage() {
            const box = document.getElementById("flatMessageBox");
            box.classList.add("hidden");
        }

       async function submitFlatAmount() {
    const amount = parseInt(document.getElementById("flatAmountInput").value);

    if (!amount || amount < MIN_FLAT_AMOUNT || amount > MAX_FLAT_AMOUNT) {
        showFlatMessage(`Please enter a valid amount between ${MIN_FLAT_AMOUNT} and ${MAX_FLAT_AMOUNT} RS`, "error");
        return;
    }

    hideFlatMessage();



if(selectedFlatChannel==='channel2'){

 try {
    // Call backend API
    const response = await fetch('/api/webapi/payment/lg-pay', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ amount })
    });

    const data = await response.json();
    console.log(data);

    // Validate success and structure
    if (data?.success && data?.data) {
        const status = data.data.status;
        const msg = data.data.msg;

        if (status === 1 && data.data.data?.pay_url) {
          console.log(data);
          
          localStorage.setItem("Payment_order_id",data.order_sn);
          window.location.href = data.data.data.pay_url;
        } else if (status === 0) {
      showFlatMessage(msg || 'Payment channel not available. Try another amount.', 'error');
        } else {
            // ⚠️ Unexpected response structure
            showFlatMessage('Unexpected payment response. Please try again.', 'error');
        }
    } else {
      
        showFlatMessage('Payment failed to initialize. Please try again.', 'error');
    }

} catch (error) {
    console.error(error);
    showFlatMessage('Unable to process payment. Please try again later.', 'error');
}



}else{



 try {
        // Call backend API
        const response = await fetch('/api/webapi/payment/webpay', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ amount })
        });

        const data = await response.json();
        localStorage.setItem("Payment_order_id",data.order_sn);

      
          window.location.href = data.payUrl;
       
    } catch (error) {
        console.error(error);
        showFlatMessage('Unable to process payment. Please try again later.', 'error');
    }







}
   
}

    </script>
</body>

</html>
