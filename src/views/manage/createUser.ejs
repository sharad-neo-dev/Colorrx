<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Account</title>

    <!-- Google Font + Icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <!-- SweetAlert Dark Theme -->
    <link
      rel="stylesheet"
      href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css"
    />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" />

    <!-- AdminLTE -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      body {
        background: #ffffff !important; /* PURE WHITE BG */
      }
      ::placeholder {
        color: #b5bdc5;
        font-size: 14px;
      }
    </style>


  </head>

  <body
    class="hold-transition sidebar-mini"
    style="background: #ffffff !important"
  >
    <!-- WRAPPER -->
    <div class="wrapper">
      <!-- NAVBAR -->
      <%- include('nav') %>

      <!-- MAIN CONTENT -->
      <div
        class="content-wrapper"
        style="
          background: #ffffff !important;
          min-height: 100vh;
          padding-top: 40px;
        "
      >
        <!-- CENTER FORM CONTAINER -->
        <div class="w-full h-full flex items-center justify-center">
          <!-- FORM CARD -->
          <div
            class="w-full max-w-lg px-8 py-10 bg-white shadow-xl rounded-xl border"
          >
            <h1 class="text-3xl font-semibold text-center mb-8 text-gray-800">
              Create Your Account
            </h1>

            <!-- FORM (UNCHANGED FUNCTIONALITY) -->
            <form id="registerForm" class="space-y-5 w-full">
              <!-- Phone -->
              <div>
                <label class="block text-gray-700 mb-1">Phone Number</label>
                <input
                  id="username"
                  type="tel"
                  maxlength="10"
                  placeholder="Enter 10-digit phone number"
                  class="w-full px-4 py-3 border rounded-lg bg-white text-gray-800 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                />
                <p
                  id="usernameError"
                  class="text-red-500 text-sm mt-1 hidden"
                ></p>
              </div>

              <!-- Password -->
              <div>
                <label class="block text-gray-700 mb-1">Password</label>
                <div class="relative">
                  <input
                    id="password"
                    type="password"
                    placeholder="Enter password"
                    class="w-full px-4 py-3 border rounded-lg bg-white text-gray-800 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  />
                  <span
                    id="togglePassword"
                    class="absolute right-4 top-3 text-gray-600 cursor-pointer"
                  >
                    <i class="ri-eye-line"></i>
                  </span>
                </div>
                <p
                  id="passwordError"
                  class="text-red-500 text-sm mt-1 hidden"
                ></p>
              </div>

              <!-- Confirm Password -->
              <div>
                <label class="block text-gray-700 mb-1">Confirm Password</label>
                <div class="relative">
                  <input
                    id="confirmPassword"
                    type="password"
                    placeholder="Confirm password"
                    class="w-full px-4 py-3 border rounded-lg bg-white text-gray-800 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  />
                  <span
                    id="toggleConfirmPassword"
                    class="absolute right-4 top-3 text-gray-600 cursor-pointer"
                  >
                    <i class="ri-eye-line"></i>
                  </span>
                </div>
                <p
                  id="confirmPasswordError"
                  class="text-red-500 text-sm mt-1 hidden"
                ></p>
              </div>

              <!-- Invite Code -->
              <div>
                <label class="block text-gray-700 mb-1"
                  >Invite Code (Optional)</label
                >
                <input
                  id="inviteCode"
                  type="text"
                  placeholder="Enter invite code"
                  class="w-full px-4 py-3 border rounded-lg bg-white text-gray-800 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                />
                <p
                  id="inviteCodeError"
                  class="text-red-500 text-sm mt-1 hidden"
                ></p>
              </div>

              <p
                id="SubmitError"
                class="text-green-500 text-sm mt-1 hidden"
              ></p>

              <!-- Submit -->
              <button
                type="submit"
                class="w-full py-3 text-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition"
              >
                Register
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- ORIGINAL SCRIPT (NO CHANGE AT ALL) -->
    <script>
      // Fill invite code from URL
      window.addEventListener("DOMContentLoaded", () => {
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get("invitationCode");
        if (code) {
          document.getElementById("inviteCode").value = code;
        }
      });

      // Only digits for phone input
      document
        .getElementById("username")
        .addEventListener("input", function () {
          this.value = this.value.replace(/\D/g, "");
        });

      // Toggle password visibility
      const togglePassword = document.getElementById("togglePassword");
      const passwordInput = document.getElementById("password");
      togglePassword.addEventListener("click", () => {
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;
        togglePassword.innerHTML =
          type === "password"
            ? '<i class="ri-eye-line"></i>'
            : '<i class="ri-eye-off-line"></i>';
      });

      const toggleConfirmPassword = document.getElementById(
        "toggleConfirmPassword",
      );
      const confirmPasswordInput = document.getElementById("confirmPassword");
      toggleConfirmPassword.addEventListener("click", () => {
        const type =
          confirmPasswordInput.type === "password" ? "text" : "password";
        confirmPasswordInput.type = type;
        toggleConfirmPassword.innerHTML =
          type === "password"
            ? '<i class="ri-eye-line"></i>'
            : '<i class="ri-eye-off-line"></i>';
      });

      function showFieldError(fieldId, message) {
        const errorEl = document.getElementById(fieldId + "Error");
        errorEl.textContent = message;
        errorEl.classList.remove("hidden");
      }

      function clearFieldError(fieldId) {
        const errorEl = document.getElementById(fieldId + "Error");
        errorEl.textContent = "";
        errorEl.classList.add("hidden");
      }

      document
        .getElementById("registerForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          [
            "username",
            "password",
            "confirmPassword",
            "inviteCode",
            "Submit",
          ].forEach(clearFieldError);

          const usernameVal = document.getElementById("username").value.trim();
          const passwordVal = document.getElementById("password").value.trim();
          const confirmPasswordVal = document
            .getElementById("confirmPassword")
            .value.trim();
          const inviteCodeVal = document
            .getElementById("inviteCode")
            .value.trim();

          let hasError = false;

          if (!usernameVal) {
            showFieldError("username", "Mobile number is required");
            hasError = true;
          } else if (!/^[0-9]{10}$/.test(usernameVal)) {
            showFieldError("username", "Enter a valid 10-digit mobile number");
            hasError = true;
          }

          if (!passwordVal) {
            showFieldError("password", "Password is required");
            hasError = true;
          }

          if (!confirmPasswordVal) {
            showFieldError("confirmPassword", "Confirm password is required");
            hasError = true;
          }

          if (
            passwordVal &&
            confirmPasswordVal &&
            passwordVal !== confirmPasswordVal
          ) {
            showFieldError("confirmPassword", "Passwords do not match");
            hasError = true;
          }

          if (hasError) return;

          try {
            const response = await fetch("/api/webapi/create-user", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                username: usernameVal,
                pwd: passwordVal,
                invitecode: inviteCodeVal,
              }),
            });

            if (!response.ok) throw new Error(`HTTP error: ${response.status}`);

            const data = await response.json();

            if (data.status === true) {
              showFieldError(
                "Submit",
                data.message || "Registration successful!",
              );

              document.getElementById("registerForm").reset();
            } else {
              showFieldError("Submit", data.message || "Registration failed");
            }
          } catch (err) {
            console.error("Registration error:", err);
            showFieldError("Submit", "Something went wrong. Try again later.");
          }
        });
    </script>
  </body>
</html>
