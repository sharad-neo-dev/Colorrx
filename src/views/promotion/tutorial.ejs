    <style>
        /* Custom style to create the arrow/banner effect on rule headers */
        
        .rule-header-shape {
            position: absolute;
            top: -16px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            padding: 4px 16px;
            color: white;
            font-weight: bold;
            font-size: 1rem;
            border-radius: 8px;
            background-color: #ff6f61;
            /* Using a specific hex that matches the red color */
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
            /* Small shadow for lift */
        }
        
        .rule-header-shape::before,
        .rule-header-shape::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 12px;
            height: 12px;
            background-color: inherit;
            border-radius: 4px;
        }
        
        .rule-header-shape::before {
            left: -6px;
            transform: translateY(-50%) rotate(45deg);
        }
        
        .rule-header-shape::after {
            right: -6px;
            transform: translateY(-50%) rotate(45deg);
        }
        /* Responsive Table styling for better mobile view */
        
        .responsive-table th,
        .responsive-table td {
            padding: 8px 4px;
            text-align: center;
            border-right: 1px solid #e2e8f0;
        }
        
        .responsive-table th:last-child,
        .responsive-table td:last-child {
            border-right: none;
        }
    </style>
