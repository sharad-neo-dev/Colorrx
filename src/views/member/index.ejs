        /* Base body style matching the general dark theme */

        :root {
            --icon-purple: #c271f0;
        }

        body {
            background-color: white;
            color: #d1d5db;
        }

        /* Full screen dark overlay gradient for the main content area (Matching image_299ae9.png background) */

        .main-content-gradient {
            background: linear-gradient(90deg, #f95959 0%, #ff9a8e 100%);
            border-radius: 0 0 70px 70px;
            /* Rounded bottom corners for the main header area */
            padding-bottom: 24px;
        }

        /* Custom style for the Service Grid Icon boxes */

        .main-content-wrapper {
            background: white;
            border-radius: 30px 30px 0 0;
            /* Rounded bottom corners for the main header area */
            padding-bottom: 24px;
        }

        .service-icon-box {
            background-color: #1e1f24;
            /* Slightly lighter dark background for separation */
            border-radius: 0.75rem;
            /* rounded-xl */
            padding: 1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: transform 0.1s;
        }

        .service-icon-box:active {
            transform: scale(0.98);
        }

        /* Responsive Layout for Service Grid */

        .service-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
        }

        /* Dialog Styles */

        .dialog {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.7);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .dialog.active {
            display: flex;
        }

        .dialog__container {
            background-color: #1e1f24;
            border-radius: 12px;
            max-width: 400px;
            width: 90%;
            padding: 20px;
            color: #d1d5db;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
        }

        .dialog__container-header {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .dialog__container-body {
            margin-bottom: 20px;
            font-size: 1rem;
        }

        .dialog__container-footer {
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .dialog__container-footer button {
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: background-color 0.2s ease;
        }

        .dialog__container-footer button.confirm {
            background-color: #9333ea;
            /* icon-purple */
            color: white;
        }

        .dialog__container-footer button.confirm:hover {
            background-color: #7c3aed;
        }

        .dialog__container-footer button.cancel {
            background-color: #44454a;
            color: #d1d5db;
        }

        .dialog__container-footer button.cancel:hover {
            background-color: #5a5b60;
        }

        .backgroud1 {
            display: flex;
            /* enable flex layout */
            align-items: center;
            /* center vertically */
            justify-content: center;
            /* center horizontally */
            width: 50px;
            /* fixed size or use relative sizing */
            height: 50px;
