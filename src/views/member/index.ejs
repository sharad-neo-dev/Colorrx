            <script>
                function copyText() {

                    const text = document.getElementById("UID").innerText
                    navigator.clipboard.writeText(text).then(() => {
                        const node = document.getElementById("copy_success");
                        node.classList.remove("hidden")
                        setTimeout(() => { node.classList.add("hidden") }, 2000)
                    }).catch(err => {
                        console.error("Copy failed", err);
                    });
                }

                function shareContent() {
                    if (navigator.share) {
                         const inviteCode = document.getElementById("UID").innerText
                        navigator.share({
                            title: "Colorrx",
                            url: `${window.location.origin}/register?invitationCode=${inviteCode}`
                        })
                            .then(() => console.log("Shared successfully"))
                            .catch(err => console.log("Share cancelled", err));
                    } else {
                        alert("Sharing not supported on this browser");
                    }
                }

                async function fetchUserBal() {
                    try {
                        const response = await axios.get("/api/webapi/GetUserInfo");
                        const userData = response?.data?.data || {};
                        const level = userData.level || 0;

                        document.getElementById("UID").innerText = userData.code;
                        document.getElementById("name_user").innerText = userData.name_user;
                        document.getElementById("wallet_amount").innerText =
                            `₹ ${userData.money_user}`;

                        // ✅ Show Admin Zone if user level is 1
                        if (level == 1) {
                            const adminLink = document.getElementById("adminZone");
                            if (adminLink) adminLink.classList.remove("hidden");
                        }
                    } catch (err) {
                        console.error("User info fetch failed:", err);
                    }
                }

                // ✅ Run automatically when page loads
                window.addEventListener("load", fetchUserBal);

                function deleteAllCookies() {
                    // Delete all cookies for the current domain
                    document.cookie.split(";").forEach(function (c) {
                        document.cookie = c
                            .replace(/^ +/, "")
                            .replace(
                                /=.*/,
                                "=;expires=" + new Date().toUTCString() + ";path=/",
                            );
                    });
                }

                const logoutHandler = () => {
                    const dialog = document.querySelector(".dialog");
                    dialog.classList.remove("inactive");
                    dialog.classList.add("active");

                    // Clean up previous event listeners by cloning nodes
                    const confirmBtn = dialog.querySelector(
                        ".dialog__container-footer button.confirm",
                    );
                    const cancelBtn = dialog.querySelector(
                        ".dialog__container-footer button.cancel",
                    );

                    // Remove previous listeners by cloning buttons (to avoid multiple firing)
                    const newConfirmBtn = confirmBtn.cloneNode(true);
                    confirmBtn.parentNode.replaceChild(newConfirmBtn, confirmBtn);

                    const newCancelBtn = cancelBtn.cloneNode(true);
                    cancelBtn.parentNode.replaceChild(newCancelBtn, cancelBtn);

                    newConfirmBtn.addEventListener("click", () => {
                        deleteAllCookies();
                        window.location.href = "/home";
                    });

                    newCancelBtn.addEventListener("click", () => {
                        dialog.classList.remove("active");
                        dialog.classList.add("inactive");
                    });
                };
            </script>

