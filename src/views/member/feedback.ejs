<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feedback | colorrx</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              "app-bg": "#0b0c1a",
              "app-purple": "#3e1474",
              "nav-item-bg": "rgba(255, 255, 255, 0.1)",
              "icon-purple": "#3e1474",
            },
          },
        },
      };
    </script>

    <!-- Remix Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>

  <body
    class="min-h-screen pb-24 w-full md:max-w-[500px] mx-auto text-sm text-white"
  >
    <!-- Header -->
    <div
      class="sticky top-0 z-10 flex items-center h-14 px-2"
      style="background: linear-gradient(90deg, #f95959 0%, #ff9a8e 100%)"
    >
      <button
        onclick="history.back()"
        aria-label="Back"
        class="text-white pr-4 text-lg"
      >
        <i class="ri-arrow-left-s-line w-6 h-auto"></i>
      </button>
      <h2 class="flex-1 text-center text-white font-semibold text-lg">
        Feedback
      </h2>
      <span class="w-6"></span>
    </div>

    <!-- Content -->
    <main class="px-4 mt-6 space-y-6">
      <!-- Feedback Textarea -->
      <div>
        <textarea
          name="feedback"
          id="feedback"
          rows="10"
          placeholder="Welcome to feedback. Please describe the problem in detail. Preferably attach a screenshot of the issue you encountered. We will process your feedback promptly!"
          class="w-full p-4 rounded-lg text-gray-900 text-sm border border-gray-300 resize-none focus:outline-none focus:ring-2 focus:ring-app-purple focus:border-transparent"
          required
        ></textarea>
      </div>

      <!-- Feedback Incentive Text -->
      <div class="text-center space-y-1">
        <p class="font-medium text-gray-600">Send helpful feedback</p>
        <p class="text-gray-600 text-sm">Chance to win Mystery Rewards</p>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-center">
        <button
          class="flex items-center justify-center space-x-3 text-red-400 border border-red-400 rounded-full hover:bg-red-500 hover:text-white transition h-[46px] w-[314px]"
        >
          <!-- Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"
            ></path>
          </svg>
          <span class="text-lg font-medium">Submit</span>
        </button>
      </div>
    </main>

    <!-- Footer (Injected via EJS if using Express.js) -->
    <%- include('../layout/footer.ejs') %>
  </body>
</html>
