<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Withdraw money</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"
      integrity="sha512-JSCFHhKDilTRRXe9ak/FJ28dcpOJxzQaCd3Xg8MyF6XFjODhy/YMCM8HW0TFDckNHWUewW+kfvhin43hKtJxAw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('nav') %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>
                  Withdrawal Requests
                  <img
                    width="35px"
                    height="35px"
                    src="/images/withdraw.png"
                    class="chackImg"
                  />
                </h1>
              </div>
            </div>
          </div>
        </section>

        <style>
          .withdraw_tab_button {
            margin-left: 10px;
            border: 1px solid #343a40;
            border-radius: 6px;
            background: #fff;
            color: #343a40;
          }

          .withdraw_tab_button.active {
            border: 0px;
            background: #343a40;
            color: #fff;
          }
        </style>

        <section class="content">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Withdrawals Requests</h3>

              <button
                class="withdraw_tab_button active"
                id="inr_w_tab"
                type="BANK_CARD"
              >
                BANK CARD
              </button>
              <button
                class="withdraw_tab_button"
                id="usdt_w_tab"
                type="USDT_ADDRESS"
              >
                USDT ADDRESS
              </button>

              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>

            <div class="card-body p-0" style="overflow-y: hidden">
              <table class="table table-striped projects">
                <thead id="table_columns">
                  <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Bank Name</th>
                    <th class="text-center">Recipient Name</th>
                    <th class="text-center">Bank Account Number</th>
                    <th class="text-center">IFSC</th>
                    <th class="text-center">UPI Id</th>
                    <th class="text-center">Amount</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Accept/Reject</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </section>
      </div>
    </div>

    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/dist/js/adminlte.min.js"></script>
    <script src="/js/admin/admin.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

    <script>
      const WITHDRAWAL_METHODS_MAP = {
        USDT_ADDRESS: "USDT_ADDRESS",
        BANK_CARD: "BANK_CARD",
      };

      const WITHDRAWAL_STATUS_MAP = {
        PENDING: 0,
        APPROVED: 1,
        DENIED: 2,
      };

      function formateT(params) {
        let result = params < 10 ? "0" + params : params;
        return result;
      }

      function timerJoin(params = "", addHours = 0) {
        let date = params ? new Date(Number(params)) : new Date();
        date.setHours(date.getHours() + addHours);

        let years = formateT(date.getFullYear());
        let months = formateT(date.getMonth() + 1);
        let days = formateT(date.getDate());
        let hours = date.getHours() % 12 || 12;
        let ampm = date.getHours() < 12 ? "AM" : "PM";
        let minutes = formateT(date.getMinutes());
        let seconds = formateT(date.getSeconds());
        return `${years}-${months}-${days} ${hours}:${minutes}:${seconds} ${ampm}`;
      }

      let ActiveTab = document
        .querySelector(".withdraw_tab_button.active")
        .getAttribute("type");
      const INR_TAB_BUTTON = document.querySelector("#inr_w_tab");
      const USDT_TAB_BUTTON = document.querySelector("#usdt_w_tab");
      const Table_Columns = document.querySelector("#table_columns");

      INR_TAB_BUTTON.addEventListener("click", () => {
        INR_TAB_BUTTON.classList.add("active");
        USDT_TAB_BUTTON.classList.remove("active");
        ActiveTab = "BANK_CARD";
        Table_Columns.innerHTML = `
        <tr>
          <th class="text-center">#</th>
          <th class="text-center">Phone Number</th>
          <th class="text-center">Bank Name</th>
          <th class="text-center">Recipient Name</th>
          <th class="text-center">Bank Account Number</th>
          <th class="text-center">IFSC</th>
          <th class="text-center">UPI Id</th>
          <th class="text-center">Amount</th>
          <th class="text-center">Date</th>
          <th class="text-center">Status</th>
          <th class="text-center">Accept/Reject</th>
        </tr>`;
        initTableData();
      });

      USDT_TAB_BUTTON.addEventListener("click", () => {
        INR_TAB_BUTTON.classList.remove("active");
        USDT_TAB_BUTTON.classList.add("active");
        ActiveTab = "USDT_ADDRESS";
        Table_Columns.innerHTML = `
        <tr>
          <th class="text-center">#</th>
          <th class="text-center">Phone Number</th>
          <th class="text-center">Main Network</th>
          <th class="text-center">USDT Address</th>
          <th class="text-center">Address Alias</th>
          <th class="text-center">Amount</th>
          <th class="text-center">Date</th>
          <th class="text-center">Status</th>
          <th class="text-center">Accept/Reject</th>
        </tr>`;
        initTableData();
      });

      function showWithDrawals(params) {
        if (params.length === 0) {
          $("tbody").html(
            `<tr class="text-center"><td colspan="7">No data found...</td></tr>`,
          );
          return;
        }

        let html = "";
        const list = params.filter((item) => item.type === ActiveTab);

        html = list
          .map((data) => {
            let statusHTML = `<span class="badge badge-warning">Waiting...</span>`;
            let actionHTML = `
          <button class="btn btn-success btn-sm confirm-btn" data="${data.id}"><i class="fa fa-check-circle"></i></button>
          <button class="btn btn-danger btn-sm delete-btn" data="${data.id}"><i class="fas fa-times-circle"></i></button>`;

            if (data.Processing_in_top === 1) {
              statusHTML = `<span class="badge badge-info">Processing in Top Pay</span>`;
              actionHTML = `<span class="text-secondary">Auto processing...</span>`;
            }

            if (ActiveTab === "BANK_CARD") {
              return `
          <tr class="text-center">
            <td>${data.id}</td>
            <td><b>${data.phoneNumber}</b></td>
            <td><b>${data.bankName}</b></td>
            <td><b>${data.recipientName}</b></td>
            <td><b>${data.bankAccountNumber}</b></td>
            <td><b>${data.IFSC}</b></td>
            <td><b>${data.upiId}</b></td>
            <td><b>${data.amount}</b></td>
            <td><b>${timerJoin(data.time)}</b></td>
            <td>${statusHTML}</td>
            <td>${actionHTML}</td>
          </tr>`;
            } else {
              return `
          <tr class="text-center">
            <td>${data.id}</td>
            <td><b>${data.phoneNumber}</b></td>
            <td><b>${data.mainNetwork}</b></td>
            <td><b>${data.usdtAddress}</b></td>
            <td><b>${data.addressAlias}</b></td>
            <td><b>${data.amount}</b></td>
            <td><b>${timerJoin(data.time)}</b></td>
            <td>${statusHTML}</td>
            <td>${actionHTML}</td>
          </tr>`;
            }
          })
          .join("");

        $("tbody").html(html);

        // Approve button
        $(".btn-success").click(function () {
          const id = $(this).attr("data");
          const phone = $(this).closest("tr").find("td").eq(1).text();

          Swal.fire({
            title: "Select Payment Method",
            html: `
            <p>Approve withdrawal for <b>${phone}</b>?</p>
            <button id="top_pay_btn" class="swal2-confirm swal2-styled" style="background-color:#007bff;margin-right:10px;">Top Pay </button>
            <button id="manual_pay_btn" class="swal2-confirm swal2-styled" style="background-color:#28a745;">Manual Pay (Estisi)</button>
          `,
            showCancelButton: true,
            cancelButtonText: "Cancel",
            showConfirmButton: false,
          });

          $(document)
            .off("click", "#top_pay_btn")
            .on("click", "#top_pay_btn", async function () {
              try {
                const res = await axios.post("/api/webapi/admin/withdraw/top", {
                  id,
                });
                await initTableData();
                Swal.fire(
                  "Success!",
                  res.data.message || "Processed via Top Pay",
                  "success",
                );
              } catch (err) {
                Swal.fire(
                  "Error",
                  err.response?.data?.message || "Something went wrong",
                  "error",
                );
              }
            });

          $(document)
            .off("click", "#manual_pay_btn")
            .on("click", "#manual_pay_btn", async function () {
              try {
                const res = await axios.post(
                  "/api/webapi/admin/withdraw/status",
                  {
                    id,
                    status: WITHDRAWAL_STATUS_MAP.APPROVED,
                    remarks: "Manual Pay (Estisi)",
                  },
                );
                await initTableData();
                Swal.fire(
                  "Success!",
                  res.data.message || "Marked as Manual Pay",
                  "success",
                );
              } catch (err) {
                Swal.fire(
                  "Error",
                  err.response?.data?.message || "Something went wrong",
                  "error",
                );
              }
            });
        });

        // Reject button
        $(".btn-danger").click(function () {
          const id = $(this).attr("data");
          const phone = $(this).closest("tr").find("td").eq(1).text();

          Swal.fire({
            title: "Reject Withdrawal",
            input: "textarea",
            inputLabel: "Enter remarks",
            inputPlaceholder: "Reason for rejection...",
            showCancelButton: true,
            confirmButtonText: "Reject",
            confirmButtonColor: "#d33",
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                const res = await axios.post(
                  "/api/webapi/admin/withdraw/status",
                  {
                    id,
                    status: WITHDRAWAL_STATUS_MAP.DENIED,
                    remarks: result.value || "Rejected manually",
                  },
                );
                await initTableData();
                Swal.fire("Rejected!", res.data.message, "success");
              } catch (err) {
                Swal.fire(
                  "Error",
                  err.response?.data?.message || "Failed to reject",
                  "error",
                );
              }
            }
          });
        });
      }

      async function initTableData() {
        try {
          const res = await axios.get("/api/webapi/withdraw/pending");
          showWithDrawals(res.data.withdrawList);
        } catch (error) {
          console.error(error);
        }
      }

      // Auto-refresh table every 30s
      setInterval(initTableData, 30000);
      initTableData();
    </script>
  </body>
</html>
